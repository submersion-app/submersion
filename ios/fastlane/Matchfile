# Matchfile - Fastlane Match Configuration
#
# Match syncs your code signing certificates and provisioning profiles
# across your team and CI by storing them encrypted in a git repository.
#
# Setup:
#   1. Create a private git repo for certificates (e.g., github.com/yourorg/certificates)
#   2. Run: bundle exec fastlane match init
#   3. Run: bundle exec fastlane match appstore (first time, to generate certs)
#
# Usage:
#   bundle exec fastlane sync_signing  # Sync certs locally
#   bundle exec fastlane match appstore --readonly  # CI usage
#
# Documentation: https://docs.fastlane.tools/actions/match/

# URL of your private git repository for certificates
# Replace with your actual certificate repository URL
git_url("git@github.com:submersion-app/certificates.git")

# Storage mode - git is the default and most common
storage_mode("git")

# Your app's bundle identifier(s)
app_identifier(["app.submersion"])

# Your Apple Developer Portal username
username("ericgriffin@gmail.com")

# The type of provisioning profile to sync
# Options: development, adhoc, appstore, enterprise
type("appstore")

# Use readonly mode by default to prevent accidental regeneration
# Set to false when you need to create new certificates
readonly(true)

# Clone the repo using a shallow clone for faster CI builds
shallow_clone(true)

# Platform to sync (ios, macos, or catalyst)
platform("ios")

# Optional: Specify team ID if you belong to multiple teams
# team_id("YOUR_TEAM_ID")

# Optional: Keychain settings for CI
# keychain_name("fastlane_keychain")
# keychain_password("")
